        <android.support.v7.widget.AppCompatButton
            android:id="@+id/modify_pwd_submit_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/modify_pwd_vcode_rl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:background="@drawable/sign_up_btn_shape"
            android:text="@string/next_step"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/modify_pwd_vcode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/modify_pwd_submit_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="@string/or"
            android:textColor="#9B9B9B"
            android:textSize="14dp"
            android:visibility="gone"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:text="@string/design_by"
            android:textColor="#B5B5B5"
            android:textSize="14dp" />
    </RelativeLayout>

