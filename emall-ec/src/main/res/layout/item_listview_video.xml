<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_video_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="13dp"
        android:textColor="#4A4A4A"
        android:textSize="16dp" />

    <com.example.emall_core.util.view.RoundImageView
        android:id="@+id/item_video_riv"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_below="@+id/item_video_title_tv"
        android:layout_marginEnd="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="14dp"
        android:scaleType="centerCrop" />

    <com.example.emall_core.util.view.HalfRoundImageView
        android:id="@+id/special_vertical_mask_hri"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginEnd="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginStart="17dp"
        android:layout_alignBottom="@+id/item_video_riv"
        android:background="@drawable/half_round" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:background="@drawable/video_play_btn" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_video_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item_video_riv"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:textColor="#9B9B9B"
        android:textSize="14dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item_video_date_tv" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_video_play_times_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_video_riv"
        android:layout_alignStart="@+id/item_video_riv"
        android:layout_alignTop="@+id/special_vertical_mask_hri"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_video_duration_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/item_video_riv"
        android:layout_alignRight="@+id/item_video_riv"
        android:layout_alignTop="@+id/special_vertical_mask_hri"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />
</RelativeLayout>
