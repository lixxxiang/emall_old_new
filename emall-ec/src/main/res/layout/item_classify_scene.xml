<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/item_classify_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.example.emall_core.util.view.SquareImageView
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:id="@+id/item_classify_iv"/>

        <RelativeLayout
            android:id="@+id/item_classify_video_mask_rl"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="#66747474"
            android:layout_alignBottom="@+id/item_classify_iv">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_preview_title"
                android:textSize="10dp"
                android:textColor="#FFFFFF"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/classify_duration"
                android:textSize="10dp"
                android:textColor="#FFFFFF"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"/>
        </RelativeLayout>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_classify_video_playbtn_rl"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/video_play_btn"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_classify_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_classify_rl"
        android:layout_alignLeft="@+id/item_classify_rl"
        android:layout_marginTop="14dp"
        android:textSize="12dp"
        android:text="adfsdfasd"
        android:textColor="#B80017"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_classify_video_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_classify_rl"
        android:layout_alignLeft="@+id/item_classify_rl"
        android:layout_toLeftOf="@+id/item_classify_video_price_tv"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="14dp"
        android:textSize="12dp"
        android:text="adfsdfasd"
        android:textColor="#5C5C5C"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_classify_video_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_classify_rl"
        android:layout_alignRight="@+id/item_classify_rl"
        android:layout_marginTop="14dp"
        android:textSize="12dp"
        android:text="adfsdfasd"
        android:textColor="#B80017"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_classify_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_classify_rl"
        android:layout_below="@+id/item_classify_price_tv"
        android:layout_marginTop="8dp"
        android:text="adfsdfasd"
        android:textColor="#9B9B9B"
        android:textSize="10dp" />


</RelativeLayout>