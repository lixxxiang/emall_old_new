<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:elevation="2dp"
            android:id="@+id/fake_status_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/statusbar_view_height"
            android:background="#FFFFFF"/>
        <android.support.v7.widget.Toolbar
            android:layout_below="@+id/fake_status_bar"
            android:id="@+id/search_searchbar_rl_"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="2dp"
            android:background="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/search_back_iv_rl"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/search_back_iv"
                        android:layout_width="10dp"
                        android:layout_height="17dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/back_from_sketch"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:focusable="true"
                    android:clickable="true"
                    android:id="@+id/search_searchbar_rl"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/style_home_pager_toolbar_search_view"
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:layout_width="116dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/index_search_icon"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="0dp"
                            android:background="@drawable/ic_search_dark" />

                        <TextView
                            android:id="@+id/edt_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@+id/index_search_icon"
                            android:lines="1"
                            android:text="@string/search_searchbar_hint"
                            android:textColor="#9B9B9B"
                            android:textColorHint="#9B9B9B"
                            android:textSize="12dp" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <com.baidu.mapapi.map.MapView
            android:id="@+id/mMapView"
            android:layout_below="@+id/search_searchbar_rl_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:background="@drawable/search_border"
            android:rotation="270"
            android:layout_below="@+id/search_searchbar_rl_"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="17dp"
            />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:background="@drawable/search_border"
            android:layout_below="@+id/search_searchbar_rl_"
            android:layout_marginTop="21dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            />
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:rotation="90"
            android:background="@drawable/search_border"
            android:layout_marginBottom="21dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            />
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:rotation="180"
            android:background="@drawable/search_border"
            android:layout_marginBottom="21dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="17dp"/>

        <ImageView
            android:id="@+id/search_btn"
            android:layout_width="174dp"
            android:layout_height="37dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="21dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/search_btn"
            />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/search_locate"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:layout_above="@+id/search_btn"
            android:background="@drawable/locate"
            android:layout_marginBottom="123dp"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/search_zoom_iv"
            android:layout_width="28dp"
            android:layout_height="59dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:layout_above="@+id/search_btn"
            android:background="@drawable/zoom"
            android:layout_marginBottom="51dp"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/search_zoom_in_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:layout_above="@+id/search_btn"
            android:background="#00000000"
            android:layout_marginBottom="78dp"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/search_zoom_out_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:layout_above="@+id/search_btn"
            android:background="#00000000"
            android:layout_marginBottom="51dp"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
