<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/program_root_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.baidu.mapapi.map.MapView
        android:id="@+id/program_mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.baidu.mapapi.map.MapView>
    <View
        android:id="@+id/program_ll_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="#BF000000"
         />
    <android.support.v7.widget.Toolbar
        android:layout_below="@+id/program_ll_bar"
        android:id="@+id/program_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#BF000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/program_back_btn_rl"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/program_back_btn"
                    android:layout_width="10dp"
                    android:layout_height="17dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/back_from_sketch_white"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/program_toolbar_searchbar"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/style_home_pager_toolbar_search_view"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="184dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/edt_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:layout_centerVertical="true"
                        android:text="@string/search_program"
                        android:textColor="#9B9B9B"
                        android:textColorHint="#9B9B9B"
                        android:textSize="12dp"/>
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_vertical">
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/program_bottom_rl"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="#BF000000"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/program_camera"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/camera"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>