<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <com.example.emall_core.util.view.RoundImageView
        android:id="@+id/item_pic_1_riv"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_pic_1_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignTop="@+id/item_pic_1_riv"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="18dp"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/item_pic_1_riv"
        android:layout_toRightOf="@+id/item_pic_1_riv"
        android:textColor="#4A4A4A"
        android:textSize="16dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_pic_1_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_alignBottom="@+id/item_pic_1_riv"
        android:layout_alignLeft="@+id/item_pic_1_detail_tv"
        android:layout_alignStart="@+id/item_pic_1_detail_tv"
        android:textColor="#9B9B9B"
        android:textSize="14dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item_pic_1_riv" />
</RelativeLayout>
