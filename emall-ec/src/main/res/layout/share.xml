<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shape_dialog"
    android:layout_height="140dp">
    <ImageButton
        android:id="@+id/wechat"
        android:layout_width="37dp"
        android:layout_height="30dp"
        android:background="@drawable/wechat_2"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="108dp"
        />

    <ImageButton
        android:id="@+id/moment"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/wechat"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"
        android:background="@drawable/moments" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:text="微信好友"
        android:textSize="12dp"
        android:textColor="#5c5c5c"
        android:layout_below="@+id/wechat"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="102dp"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="38dp"
        android:layout_height="15dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/moment"
        android:layout_alignRight="@+id/moment"
        android:text="朋友圈"
        android:textColor="#5c5c5c"
        android:textSize="12dp" />

    <Button
        android:id="@+id/button"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="40dp"
        />
</RelativeLayout>
